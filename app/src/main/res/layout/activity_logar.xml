<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.lucas.uniforajuda.Logar"
    android:background="#da111010"
    android:clickable="false">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Ajuda Unifor "
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="79dp"
        android:textColor="#007ea4"
        android:textSize="50dp" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:inputType="numberPassword"
        android:id="@+id/etMatricula"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp"
        android:background="#fbfafa"
        android:hint="MatrÃ­cula " />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:inputType="numberPassword"
        android:ems="10"
        android:id="@+id/etSenha"
        android:layout_below="@+id/etMatricula"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="63dp"
        android:background="#fbfafa"
        android:hint="Senha" />

    <Button
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:text="Logar"
        android:id="@+id/btLogar"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="54dp"
        android:background="#007ea4"
        android:textColor="#ffffff" />
</RelativeLayout>
